+int __init init_sched_auth_debug_procfs(void)
+{
+	struct proc_dir_entry *pe = NULL;
+
+	pe = proc_create("sched_auth_qos_debug",
+		0400, NULL, &sched_auth_debug_fops);
+	if (unlikely(!pe))
+		return -ENOMEM;
+	return 0;
+}
